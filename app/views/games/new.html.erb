<h1>New Game</h1>

<div class = "block">
<% (0..@array.length - 1).each do |x| %>
  <div class = letters> <%= @array[x] %> </div>
<%end%>
</div>

<p>What is the longest word you can find?</p>

<form action="score" method = "POST">
  <input type="text" name="word" id="text">
  <input type="submit" value = "Play" id="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :array, @array%>
</form>
